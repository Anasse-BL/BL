{
  "name": "competiwatch-desktop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "nedb": "^1.8.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4"
  },
  "homepage": "./",
  "main": "src/electron-starter.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev": "nf start",
    "electron": "electron .",
    "electron-dev": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "electron-build-macos": "if [ -d \"dist/Competiwatch Desktop-darwin-x64\" ]; then rm -r \"dist/Competiwatch Desktop-darwin-x64\"; fi && npm run build && node_modules/electron-packager/cli.js . \"Competiwatch Desktop\" --out=dist --platform=darwin --arch=all",
    "electron-build-windows": "npm run build && node node_modules\\electron-packager\\cli.js . --out=dist --platform=win32 --arch=all"
  },
  "devDependencies": {
    "electron": "^2.0.4",
    "electron-packager": "^12.1.0",
    "foreman": "^3.0.1"
  }
}
